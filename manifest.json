{
  "manifest_version": 2,
  "name": "chrome-request-headers",
  "description": "Inject/Replace chrome request headers",
  "version": "1.0",
  "sandbox": {
    "pages": ["options.html"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },

  "options_page": "app.html",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ]
}
